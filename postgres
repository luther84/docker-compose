  postgres:
    container_name: postgres
    restart: unless-stopped
    image: postgres:9.6
    volumes:
      - /srv/datalink/Home/postgres:/var/lib/postgresql/data
      - /etc/localtime:/etc/localtime:ro
    environment:
      - POSTGRES_USER=myusername
      - POSTGRES_PASSWORD=mypassword
    ports:
      - "5432:5432"
