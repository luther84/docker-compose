version: '3'

services:
  reverse-proxy:
    image: traefik
    command: --api --docker
    restart: always
    ports:
      - 8080:8080
      - 80:80
      - 443:443
    networks:
      - web
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /srv/traefik/traefik.toml:/traefik.toml
      - /srv/traefik/acme.json:/acme.json
    container_name: traefik

networks:
  web:
    external: true
